<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Views.SquareAreaView"
             Title="Área del Cuadrado">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Ingrese el valor del lado" />
        <Entry Text="{Binding Lado, Mode=TwoWay}" Keyboard="Numeric" Placeholder="Valor del lado" />

        <Button Text="Calcular" Command="{Binding CalcularCommand}" />
        <Button Text="Limpiar" Command="{Binding LimpiarCommand}" />

        <Label Text="{Binding Resultado}" FontSize="24" TextColor="Black" />
    </StackLayout>
</ContentPage>
